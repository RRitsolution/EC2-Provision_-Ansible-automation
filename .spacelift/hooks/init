#!/bin/bash
set -e

echo "üîß [HOOK] Starting Spacelift init hook..."

# Install pip if missing
if ! command -v pip &> /dev/null; then
  echo "‚ö†Ô∏è pip not found, installing..."
  curl -sS https://bootstrap.pypa.io/get-pip.py | python3
fi

echo "‚úÖ pip found at: $(which pip)"
echo "üì¶ Installing boto3 and botocore globally..."

pip install boto3 botocore

echo "‚úÖ boto3 and botocore installed successfully"
